<div class="home-page page">
  {% include 'home/header' %}

  <div class="container">
    <div class="home-social-links">
      {% if settings.view.social.instagram.size > 0 %}
        <a href="{{ settings.view.social.instagram }}" target="_blank"><i class="sprite-instagram sprite"></i></a>
      {% endif %}
      {% if settings.view.social.facebook.size > 0 %}
        <a href="{{ settings.view.social.facebook }}" target="_blank"><i class="sprite-facebook sprite"></i></a>
      {% endif %}
      {% if settings.view.social.twitter.size > 0 %}
        <a href="{{ settings.view.social.twitter }}" target="_blank"><i class="sprite-twitter sprite"></i></a>
      {% endif %}
      {% if settings.view.social.pinterest.size > 0 %}
        <a href="{{ settings.view.social.pinterest }}" target="_blank"><i class="sprite-pinterest sprite"></i></a>
      {% endif %}
    </div>

    <div class="row">
      <div class="col-sm-4">
        <ul class="home-categories">
          {% for category in categories %}
            {% if category.parent_category_id == nil %}
              <li>
                <a href="/categories/{{ category.slug }}">{{ category.title }}</a>
              </li>
            {% endif %}
          {% endfor %}
        </ul>

        <ul class="home-partners">
          {% for partner in settings.view.home.partners %}
            <li>
              <a href="{{ partner.url }}" target="_blank">
                {% image, src: partner.image, alt: partner.name %}
              </a>
            </li>
          {% endfor %}
        </ul>
      </div>
      <div class="col-sm-8">
        {% assign home_products = current_school | get_products_by_category_slug, 'destaque', 6 %}

        <div class="row">
          <div id="js-product-list" class="home-product-list">
            {% for product in products %}
              <div class="col col-sm-6">
                {% include 'product/product-card', product: product, gateway: gateway %}
              </div>
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
