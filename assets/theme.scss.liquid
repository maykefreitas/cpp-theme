/* General */
$color-primary: {{ settings.style.color_primary | default: 'inherit' }};
$type-base-family: '{{ settings.style.type_base_family | default: 'inherit' }}';
$type-base-size: {{ settings.style.type_base_size | default: 'inherit' }};

/* Buttons */
$color-button-primary-bg: {{ settings.style.color_button_primary_bg | default: 'inherit' }};
$color-button-secondary-bg: {{ settings.style.color_button_secondary_bg | default: 'inherit' }};

/* Text */
$color-links: {{ settings.style.color_links | default: 'inherit' }};
$color-button-primary-text: {{ settings.style.color_button_primary_text | default: 'inherit' }};
$color-button-secondary-text: {{ settings.style.color_button_secondary_text | default: 'inherit' }};
$type-title-family: '{{ settings.style.type_title_family | default: 'inherit' }}';
$type-title-size: {{ settings.style.type_title_size | default: 'inherit' }};
$type-subtitle-family: '{{ settings.style.type_subtitle_family | default: 'inherit' }}';
$type-subtitle-size: {{ settings.style.type_subtitle_size | default: 'inherit' }};
$type-paragraph-family: '{{ settings.style.type_paragraph_family | default: 'inherit' }}';
$type-paragraph-size: {{ settings.style.type_paragraph_size | default: 'inherit' }};
$type-button-family: '{{ settings.style.type_paragraph_family | default: 'inherit' }}';
$type-button-size: {{ settings.style.type_paragraph_size | default: 'inherit' }};

/* General */

html.turbolinks-progress-bar::before {
  background-color: $color-primary !important;
}

body {
  font-family: $type-base-family, Helvetica, Arial, sans-serif, sans-serif;;
  font-size: $type-base-size;
}

/* Text */

h1, h2 {
  font-family: $type-title-family;
}

h3, h4, h5 {
  font-family: $type-subtitle-family;
}

h1 {
  * {
    font-size: $type-title-size * 1.3;
  }
}

h2 {
  * {
    font-size: $type-title-size;
  }
}

h3 {
  * {
    font-size: $type-subtitle-size * 1.3;
  }
}

h4 {
  * {
    font-size: $type-subtitle-size;
  }
}

h5 {
  * {
    font-size: $type-subtitle-size * 0.7;
  }
}

p {
  font-family: $type-paragraph-family;
  font-size: $type-paragraph-size;
}

a {
  color: $color_links;
}

/* Buttons */

.btn {
  font-family: $type-button-family;

  * {
    font-size: $type-button-size;
  }
}

.btn-default {
  background-color: $color-button-secondary-bg;
  border-color: darken($color-button-secondary-bg, 15%);

  * {
    color: $color-button-secondary-text;
  }

  &:hover,
  &:focus {
    background-color: darken($color-button-secondary-bg, 5%);
    border-color: darken($color-button-secondary-bg, 5%);
  }

  &:active {
    &,
    &:hover {
      background-color: darken($color-button-secondary-bg, 8%) !important;
      border-color: darken($color-button-secondary-bg, 8%) !important;
    }
  }
}

.open {
  > .btn-default.dropdown-toggle {
    &,
    &:focus,
    &:hover {
      background-color: darken($color-button-secondary-bg, 8%);
      border-color: darken($color-button-secondary-bg, 8%);
    }
  }
}

.btn-primary {
  background-color: $color-button-primary-bg;
  border-color: $color-button-primary-bg;

  * {
    color: $color-button-primary-text;
  }

  &:hover,
  &:focus {
    background-color: lighten($color-button-primary-bg, 5%);
    border-color: lighten($color-button-primary-bg, 5%);
  }

  &:active {
    &,
    &:hover {
      background-color: darken($color-button-primary-bg, 8%) !important;
      border-color: darken($color-button-primary-bg, 8%) !important;
    }
  }
}

.open {
  > .btn-primary.dropdown-toggle {
    &,
    &:focus,
    &:hover {
      background-color: darken($color-button-primary-bg, 8%);
      border-color: darken($color-button-primary-bg, 8%);
    }
  }
}

/* List Group */
.list-group {
  .list-group-item {
    &.active {
      background-color: $color-primary;
      border-color: $color-primary;

      @if (lightness($color-primary) > 50) {
        * {
          color: #222;
        }
      } @else {
        * {
          color: #fff;
        }
      }
    }
  }
}

/* Lesson Page */
.lesson-page {
  .lesson-page-sidebar {
    .course-content {
      .lesson {
        &.active {
          &.active {
            box-shadow: 1px 0 0 0 $color-primary;
            border-left: 1px solid $color-primary !important;
          }
          .content-lesson {
            .class-info {
              .left {
                i {
                  &:after {
                    border-color: lighten($color-primary, 20%);
                  }
                }
              }
              .lesson-title {
                &:hover {
                  span {
                    background-color: rgba($color-primary, .8);
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}

